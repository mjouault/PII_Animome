@model Animome.Models.Note

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <a asp-controller= "Patients" asp-action="Index"><ion-icon name="arrow-back" class="icon"></ion-icon></a>
</div>
<h1>Ajout d'une note</h1>

<h4>Note</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Texte" class="control-label"></label>
                <input asp-for="Texte" class="form-control" />
                <span asp-validation-for="Texte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



