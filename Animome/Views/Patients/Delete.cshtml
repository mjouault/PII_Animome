@model Animome.Models.Patient

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <a asp-action="Index"><ion-icon name="arrow-back" class="icon"></ion-icon></a>
</div>
<h3>Etes-vous sûr.e de vouloir supprimer le patient n° @Model.Numero ?</h3>
<div>  
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
    </form>
</div>
