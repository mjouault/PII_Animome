@model IEnumerable<Animome.Models.SuiviPrerequis>

@{
    ViewData["Title"] = "AfficherPrerequis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="titre">Afficher Prérequis</h1>

<table class="table">
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <text class="texte">@Html.DisplayFor(modelItem => item.Prerequis.Intitule)</text>
                    <div class="alignes">
                        @foreach (var suiviNiveau in item.LesSuiviNiveaux)
                        {
                        <div class="carteCompetence">
                            <text class="texte">@Html.DisplayFor(modelItem => suiviNiveau.Niveau.Intitule) : 20 %</text>
                            @foreach (var suiviExercice in suiviNiveau.LesSuiviExercices)
                            {

                                @if (suiviExercice.Valide)
                                {<div class="itemExerciceValide">
                                        <a asp-controller="SuiviExercices" asp-action="AnnulerValidation" asp-route-id="@suiviExercice.Id">@suiviExercice.Id</a>
                                    </div>
                                }
                                else
                                {
                                    <div class="itemExerciceNonValide">
                                        <a asp-controller="SuiviExercices" asp-action="Valider" asp-route-id="@suiviExercice.Id">@suiviExercice.Id</a>
                                    </div>
                                }
                            }
                            <p>
                                <a asp-controller="SuiviExercices" asp-action="Create" asp-route-id="@suiviNiveau.Id">+ niveau </a>
                            </p>
                        </div>

                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

