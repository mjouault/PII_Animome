@model IEnumerable<Animome.Models.DomaineCompetence>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-controller="Parametres" asp-action="Index"><ion-icon name="arrow-back" class="icon"></ion-icon></a>
</p>
<h1>Liens Domaine-Compétence</h1>
<p>
    <a asp-action="Create" class="lien">Ajouter <ion-icon name="add-circle" class="icon"></ion-icon></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Domaine
            <th>
                Compétence
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Domaine.Intitule)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Competence.Intitule)
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id"><ion-icon name="trash-outline" class="icon"></ion-icon></a>
                </td>
            </tr>
        }
    </tbody>
</table>
