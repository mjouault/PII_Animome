@model IEnumerable<Animome.Models.Suivi>

@{
    ViewData["Title"] = "AfficherSuivi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Animome</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <h1>AfficherSuivi</h1>
    <table class="table">
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div class="alignes">
                            <text class="texte">@Html.DisplayFor(modelItem => item.Domaine.Intitule)</text>
                            <a asp-controller="Suivis" asp-action="Valider" asp-route-id="@item.Id">V </a>
                            <a asp-controller="Suivis" asp-action="AnnulerValidation" asp-route-id="@item.Id">A </a>
                            <a asp-controller="Commentaires" asp-action="Index" asp-route-id="@item.Id">Voir commentaires</a>
                        </div>
                            <div class="alignes">
                            @foreach (var suiviCompetence in item.LesSuiviCompetences)
                            {
                                <div class="carteCompetence">
                                    <text class="texte">@Html.DisplayFor(modelItem => suiviCompetence.Competence.Intitule) : 20 %</text>
                                    <a asp-controller="SuiviCompetences" asp-action="Valider" asp-route-id="@suiviCompetence.Id">V </a>
                                    <a asp-controller="SuiviCompetences" asp-action="AnnulerValidation" asp-route-id="@suiviCompetence.Id">A </a>
                                    <div class="alignes">
                                        @foreach (var suiviPrerequis in suiviCompetence.LesSuiviPrerequis)
                                        {
                                            @if (suiviPrerequis.Etat==EtatEnum.e3)
                                            {<div class="itemPrerequisValide">
                                                    <a asp-controller="SuiviPrerequis" asp-action="AfficherPrerequis" asp-route-id="@suiviPrerequis.Id">E</a>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="itemPrerequisNonValide">
                                                    <a asp-controller="SuiviPrerequis" asp-action="AfficherPrerequis" asp-route-id="@suiviPrerequis.Id">E</a>
                                                </div>
                                            }
                                            <a asp-controller="SuiviPrerequis" asp-action="Valider" asp-route-id="@suiviPrerequis.Id">V </a>
                                            <a asp-controller="SuiviPrerequis" asp-action="AnnulerValidation" asp-route-id="@suiviPrerequis.Id">A </a>
                                        }
                                    </div>
                                </div>

                            }
                        </div>
                        <p>
                            <a asp-controller="SuiviCompetences" asp-action="AjouterCompetence" asp-route-id="@item.Id">+ compétence </a>
                        </p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
