@model IEnumerable<Animome.Models.ApplicationUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Collaborateurs</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Nom Prénom
            </th>
            <th>
                Adresse Mail
            <th>
                Domaines d'expertise
            </th>
            <th>
                Statut
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom) @Html.DisplayFor(modelItem => item.Prenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @foreach (var domaineUser in item.LesDomaines)
                    {
                        <div>
                        @Html.DisplayFor(modelItem => domaineUser.Domaine.Intitule);
                        </div>
                    }
                </td>
                <td>
                    @if (item.Role == "EnAttente")
                    {
                      <a asp-action="Accepter" asp-route-id="@item.Id">Accepter</a>
                    }
                </td>
                <td>
                    <a asp-controller = "DomaineUsers" asp-action="Index" asp-route-id="@item.Id">Modifier Domaines d'expertise</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Modifier informations</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>

            </tr>
        }

    </tbody>
</table>