@model Animome.ViewModels.DomaineCreateViewModel

@{
    ViewData["Title"] = "CreerDomaine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Domaine</h4>
