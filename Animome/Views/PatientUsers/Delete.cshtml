@model Animome.Models.PatientUser

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-controller="" asp-action="Index" asp-route-id="@Model.Patient.Id"><ion-icon name="arrow-back"></ion-icon></a>
</p>

<h3>Etes -vous sûr.e de vouloir supprimer ce membre de l'équipe thérapeutique du patient n° @Model.Patient.Numero?</h3>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> 
    </form>
</div>
