@model IEnumerable<Animome.Models.ApplicationUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Collaborateurs</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Nom Prénom
            </th>
            <th>
               Adresse Mail
            <th>
                Domaines d'expertise
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom) @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @foreach (var suiviUser in item.LesSuiviApplicationUsers)
                {
                    @Html.DisplayFor(modelItem => suiviUser.Suivi.Domaine.Intitule);
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>

        </tr>
        }

    </tbody>
</table>